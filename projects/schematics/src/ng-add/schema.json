{
    "$schema": "http://json-schema.org/schema",
    "id": "ngx-hotkeys-ng-add",
    "title": "ngx-hotkeys ng-add schematic",
    "type": "object",
    "properties": {
        "project": {
            "type": "string",
            "description": "Name of the project.",
            "$default": {
                "$source": "projectName"
            }
        },
        "disableCheatSheet": {
            "type": "boolean",
            "default": false,
            "description": "Whether the cheatsheet should be disabled.",
            "x-prompt": "Should the cheatsheet be disabled?"
        },
        "cheatSheetCloseEsc": {
            "type": "boolean",
            "default": true,
            "description": "Whether the cheatsheet should be closable by pressing 'esc'.",
            "x-prompt": "Should the cheatsheet be closable by pressing 'esc'?"
        },
        "skipImport": {
            "type": "boolean",
            "description": "Flag to skip the module import.",
            "default": false
        }
    },
    "required": []
}